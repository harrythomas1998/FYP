<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background9"
    android:orientation="vertical"
    tools:context=".SelectPlantsMenu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Select a Plant type..."
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/conifersButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Conifers"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000" />

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <Button
        android:id="@+id/alpinesButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Alpines and Rockeries"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold" />

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <Button
        android:id="@+id/beddingButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Bedding"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000" />

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/climbersButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Climbers"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"/>

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/exoticButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Exotics"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"/>

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/fernButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Ferns"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"/>

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/grassesButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Grasses"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/hedgesButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Hedges"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



</LinearLayout>