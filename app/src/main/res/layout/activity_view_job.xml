<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewJob"
    android:background="@drawable/background9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/view_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title goes here"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="35sp"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/view_job_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="time goes here"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/view_job_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date goes here"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/view_job_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="weather goes here"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/view_job_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="temp goes here"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/view_job_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description goes here"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:layout_marginBottom="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="bottom">

                <Button
                    android:id="@+id/mark_as_done_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Mark as Done"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="bottom">

            <Button
                android:id="@+id/edit_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Edit Details"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>










</LinearLayout>